{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "es5", "es7"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "build", "coverage"],
  "include": ["src/tests/**/*"]
}
